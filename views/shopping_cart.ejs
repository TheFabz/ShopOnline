    <!--Displays your order-->
    <div class="items">
        <div class="jumbotron">
            <% var total=0 %>
                <% for(var i=0; i < shoppingCartArr.length; i++) {%>
                    <% total=total + parseInt(shoppingCartArr[i].price) %>
                        <% } %>

                            <h3 class="display-4">Your order:</h3>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col"><b>Product name:</b></th>
                                        <th scope="col"><b>Price:</b></th>
                                        <th scope="col"><b>Product page:</b></th>
                                        <th scope="col"><b>Remove:</b></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var i=0; i < shoppingCartArr.length; i++) {%>
                                        <tr>
                                            <th scope="row">
                                                <%= i + 1 %>
                                            </th>
                                            <td>
                                                <%= shoppingCartArr[i].product_name %>
                                            </td>
                                            <td>
                                                <%= parseInt(shoppingCartArr[i].price) %>€
                                            </td>
                                            <td><a href="/product/<%=shoppingCartArr[i]._id%>">
                                                    <i class="material-icons">description</i>
                                                </a></td>
                                            <td><a href="/remove_from_cart/<%=shoppingCartArr[i]._id%>"
                                                    class="card-link"><i class="material-icons">clear</i></a></td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                            <p>Total is:</p>
                            <h1>
                                <%= total %> €
                            </h1>
                            <div class="page_buttons">
                                <p class="lead">
                                    <a class="btn btn-secondary btn-lg" href="/main_page" role="button">Keep
                                        Shopping</a>
                                </p>
                                <p class="lead">
                                    <a class="btn btn-primary btn-lg" href="#" role="button" data-toggle="modal"
                                        data-target="#exampleModal-add" data-whatever="@mdo">Buy now!</a>
                                </p>
                            </div>
        </div>
    </div>
    <!--Displays your order-->

    <!--customer details form-->
    <div class="modal fade" id="exampleModal-add" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Complete your order</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form action="/make_order" method="POST">
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Name:</label>
                            <input type="text" required class="form-control" name="customer_name">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Email:</label>
                            <input type="email" required class="form-control" name="customer_email">
                        </div>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Address:</label>
                            <input type="text" required class="form-control" name="customer_address">
                        </div>

                        <% for(var i=0; i < shoppingCartArr.length; i++) {%>
                            <input type="hidden" name="product%>" value="<%= shoppingCartArr[i].product_name %>" />

                            <input type="hidden" name="price" value="<%= shoppingCartArr[i].price %>" />

                            <input type="hidden" name="product_page" value="/product/<%=shoppingCartArr[i]._id%>" />

                            <% } %>

                                <% var orderNumber=0 %>
                                    <input type="hidden" id="date" name="date" />
                                    <input type="hidden" name="total" value="<%= total %>" />
                                    <input type="hidden" id="order_number" name="order_number" />
                                    <input type="hidden" name="total_items" value="<%=shoppingCartArr.length%>" />



                                    <script type="text/javascript">
                                        // Set the value of the "date" field
                                        var today = new Date().toISOString().slice(0, 10)
                                        document.getElementById("date").value = today;

                                        var uniqueId = new Date().valueOf();
                                        document.getElementById("order_number").value = uniqueId;

                                    </script>

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Order Now!</button>
                                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
